<%- include("includes/head"); -%>

<main class="d-flex flex-row h-100">
    <%- include("includes/navbar") -%>



    <div class="text-white m-auto container h-100 d-flex justify-content-center align-items-center">
        <%if(contact._id){%>

        <form class=" g-3 mx-auto w-75 bg-dark rounded p-3 shadow " method="POST"
            action="/contact/edit/<%= contact._id %>">
            <%}else{%>

            <form class=" g-3 mx-auto w-75 bg-dark rounded p-3 shadow " method="POST" action="/contact/add">
                <%}%>



                <%if(contact._id){%>
                <h1 class="text-center">Contato</h1>
                <p class="text-center">Edite um contato abaixo.</p>
                <%-include("includes/messages"); -%>
                <div>
                    <label for="name" class="form-label"><%=contact.name%></label>
                    <input type="text" class="form-control " required name="name" id="name">
                </div>
                <div class="my-3">
                    <label for="Email4" class="form-label"><%=contact.email%></label>
                    <input type="email" class="form-control" name="email" id="Email4">
                </div>
                <div class="my-3">
                    <label for="phone" class="form-label"><%=contact.phone%></label>
                    <input type="tel" class="form-control " name="phone" id="phone">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn my-3 w-50 btn-primary">Editar contato</button>
                </div>
                <%}else{%>
                <h1 class="text-center">Contato</h1>
                <p class="text-center">Adicione um contato abaixo.</p>
                <%-include("includes/messages"); -%>
                <div>
                    <label for="name" class="form-label">Nome</label>
                    <input type="text" class="form-control " required name="name" id="name">
                </div>
                <div class="my-3">
                    <label for="Email4" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="Email4">
                </div>
                <div class="my-3">
                    <label for="phone" class="form-label">Telefone</label>
                    <input type="tel" class="form-control " name="phone" id="phone">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn my-3 w-50 btn-primary">Adicionar contato</button>
                </div>
                <%}%>
                <input type="hidden" name="_csrf" value=<%=csrfToken %> />

            </form>
    </div>

</main>



<%- include("includes/footer"); -%>