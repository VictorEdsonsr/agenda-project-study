<%- include("includes/head"); -%>

<main class="d-flex h-100 mw-100">
    <%- include("includes/navbar") -%>

    <section class="d-flex w-100 justify-content-center align-items-center">
        <div class="d-flex flex-column mw-100 align-items-center">
            <%-include("includes/messages") -%>
            <%if(contact.length > 0){%>
            <table class="table table-dark w-100">
                <thead>
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Numero</th>
                    </tr>
                </thead>
                <tbody>
                    <%contact.forEach((contact )=> {%>
                    <tr>

                        <td><%=contact.name%></td>
                        <td><%=contact.email%></td>
                        <td><%=contact.phone%></td>
                        <td><a class="text-primary" href="/contact/index/<%=contact._id%>">editar</a></td>
                        <td><a class="text-danger" href="/contact/delete/<%=contact._id%>">deletar</a></td>


                    </tr>
                    <%})%>
                </tbody>
            </table>
            <%}else{%>

            <p class="text-center lead">Voce nao tem contatos</p>
            <%}%>


            <a href="/contact/index" class="my-3 bg-dark p-3 text-white nav-link rounded">Adicionar contato</a>
        </div>

    </section>

</main>



<%- include("includes/footer"); -%>